<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- Custom style for ActionBar -->
    
    <style name="Theme.ShazamBlue" parent="Theme.Sherlock.Light.DarkActionBar">
		    <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
		    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
	</style>

	<style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
	    <item name="windowNoTitle">true</item>
	    <item name="background">@drawable/gradient_ab_background</item>
	    <item name="android:background">@drawable/gradient_ab_background</item>
	    <item name="android:icon">@drawable/rsswhite</item>
	    <item name="icon">@drawable/rsswhite</item>
	
	</style>
	 <!-- Custom style for ActionBar -->
</resources>